extends index.pug
block content
    .listHead
        h1(class="ui header") User Listing
        a(href="/")
            button(class="ui pink button") Create User
    table(class="ui sortable celled table userList" id="users")
        thead
            tr
                th.no-sort
                    div(class="ui action input")
                        input(type="text" id="search" placeholder="Search Anything...")
                        button(class="ui icon button")
                            i(class="search icon")
                th Username
                th First Name
                th Last Name
                th Email
                th Age
                th Id
        tbody
            each val in users
                tr
                    td.buttons
                        a(href=`/edit?id=${val.id}`)
                            button(class="ui pink button") edit
                        a(href=`/deleteUser?id=${val.id}`)
                            button(class="ui yellow button delete") delete
                    td(data-label="username")= val.username
                    td(data-label="firstname")= val.firstname
                    td(data-label="lastname")= val.lastname
                    td(data-label="email")= val.email
                    td(data-label="age")= val.age
                    td(data-label="id")= val.id
                    