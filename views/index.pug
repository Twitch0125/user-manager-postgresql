doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class="userCreation" id="userCreation")
      form(class="myForm" id="myForm", method="post", action="/addUser")
        h2(class="formHead") User Creation
        label(class="formField formLabel" for="username") Username
        input(class="formField formInput" type="text", id="username", name="username" placeholder="username")
        label(class="formField formLabel" for="name") Name
        input(class="formField formInput" type="text", id="name", name="name" placeholder="name")
        label(class="formField formLabel" for="email") Email
        input(class="formField formInput" type="email", id="email", name="email" placeholder="email")
        label(class="formField formLabel" for='age') Age
        input(class="formField formInput" type="number" id='age', name='age' placeholder="age")
        input(class="formField formButton" type="submit", value="Add User")
    a(href="/users")
      button users list

